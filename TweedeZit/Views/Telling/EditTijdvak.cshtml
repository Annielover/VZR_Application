@model TweedeZit.Tijdvak

@{
    ViewBag.Title = "Wijzig tijdvak";
}

<ul class="breadcrumb">
    <li>
        <a href="@Url.Action("Index", "Home")">
        <span class="badge badge-warning">Home</span></a> <span class="divider">/</span></li>
    <li>
        <a href="@Url.Action("Index", "Telling")">
        <span class="badge badge-warning">Beheerspagina tellingen</span></a> <span class="divider">/</span></li>
    <li class="active">Wijzig tijdvak</li>
</ul>

<h3>Pas het tijdvak aan</h3>

<h4>@ViewBag.Message</h4>
<p>&nbsp;</p>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Tijdvak</legend>

        @Html.HiddenFor(model => model.TijdvakId)

        <div class="editor-label">
            @Html.LabelFor(model => model.Van)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Van)
            @Html.ValidationMessageFor(model => model.Van)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Tot)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Tot)
            @Html.ValidationMessageFor(model => model.Tot)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AantalZwemmers)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AantalZwemmers)
            @Html.ValidationMessageFor(model => model.AantalZwemmers)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AantalBanen)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AantalBanen)
            @Html.ValidationMessageFor(model => model.AantalBanen)
        </div>

        <p>
            <input type="submit" value="Wijzigingen opslaan" class="btn btn-primary"/>
            <input type="button" class="btn" id="cancelButton" value="Annuleren"/>
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <link href="~/Content/datepicker.css" rel="stylesheet"/>

    <script src="~/Scripts/bootstrap-datepicker.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function() {

            $('#cancelButton').click(function() {
                document.location = '@Url.Action("Index", "Telling")';
            });
        });
    </script>
}