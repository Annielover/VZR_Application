<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    @Styles.Render("~/Content/themes/base/css", "~/Content/css")
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <link href="~/Content/datepicker.css" rel="stylesheet">
    <link href="~/Content/bootstrap-responsive.css" rel="stylesheet">
    <link rel="shortcut icon" href="~/Content/icons/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/Content/icons/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/Content/icons/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/Content/icons/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="~/Content/icons/apple-touch-icon-57-precomposed.png">

    <style>
        body {
            padding-top: 35px;
        }

        #cont {
            padding-top: 30px;
        }
    </style>

</head>

<body>
    @*@if (TempData["msg"] != null)
    {
        <script type="text/javascript">alert("@TempData["msg"]")</script>
    }*@
    <div class="navbar navbar-fixed-top navbar-inverse">
        <div class="navbar-inner">
            <div class="container">
                <a class="brand" href="http://www.vzr.be">VZR</a>
                <div class="nav-collapse">
                    <ul class="nav nav-pills">
                        <li><a href="@Url.Action("Index", "Home")" rel="tooltip" title="De beginpagina"><i class="icon-home icon-white"></i> Startpagina</a></li>

                        <li><a href="@Url.Action("Index", "Aanwezigheid")" rel="tooltip" title="Overzicht van de trainingsgroepen"><i class="icon-user icon-white"></i> Zwemgroepen</a></li>
                        
                        <!--<li><a href="@Url.Action("Contact", "Home")" rel="tooltip" title="Contacteer ons!"><i class="icon-envelope icon-white"></i>Contact</a></li> //-->

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-info-sign icon-white"></i> Help</a>
                            <ul class="dropdown-menu">
                                <li><a href="@Url.Action("HelpBeginnen", "Home")" rel="tooltip" title="Hoe begin ik?"> Beginnen</a></li>
                                <li><a href="@Url.Action("HelpZwemgroepToevoegen", "Home")" rel="tooltip" title="Toevoegen van een zwemgroep"> Zwemgroep toevoegen</a></li>
                                <li><a href="@Url.Action("HelpDagToevoegen", "Home")" rel="tooltip" title="Toevoegen van een trainingsdag"> Trainingsdag toevoegen</a></li>
                                <li><a href="@Url.Action("HelpAanwezigheden", "Home")" rel="tooltip" title="Aanwezigheden van een dag wijzigen"> Aanwezigheden wijzigen</a></li>
                            </ul>
                        </li>

                        <li>@Html.Partial("_LoginPartial")</li>
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>


    <div id="header"></div>


    <div id="cont" class="container">
        @if (TempData["msg"] != null)
        {
            <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>OK!</strong> @TempData["msg"]
            </div>
        }
        @RenderBody()

    </div>
    <!-- /container -->
    <footer class="footer" style="background-color: #c9c9c9;">
        <div class="container">
            <div class="row">
                <h5>&copy; @DateTime.Now.Year Laurent De Wilde, Mathias Alame, Tineke De Leeuw</h5>
            </div>
        </div>
    </footer>
    <!-- Op het einde van de pagina zodat deze sneller laadt -->
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap-tooltip.js"></script>
    <script src="~/Scripts/bootstrap-dropdown.js"></script>
    <script src="~/Scripts/bootstrap-modal.js"></script>
  
    <script type="text/javascript">
        $(document).ready(function () {
            $("a").tooltip({
                'selector': '',
                'placement': 'bottom'
            });
        });

    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('span.field-validation-valid, span.field-validation-error').each(function () {
                $(this).addClass('help-inline');
            });
            $('form').submit(function () {
                if ($(this).valid()) {
                    $(this).find('div.control-group').each(function () {
                        if ($(this).find('span.field-validation-error').length == 0) {
                            $(this).removeClass('error');
                        }
                    });
                }
                else {
                    $(this).find('div.control-group').each(function () {
                        if ($(this).find('span.field-validation-error').length > 0) {
                            $(this).addClass('error');
                        }
                    });
                }
            });
            $('form').each(function () {
                $(this).find('div.control-group').each(function () {
                    if ($(this).find('span.field-validation-error').length > 0) {
                        $(this).addClass('error');
                    }
                });
            });
        });

    </script>
    @RenderSection("scripts", required: false)
    @RenderSection("featured", required: false)

</body>
</html>
